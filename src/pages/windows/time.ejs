<div class="row" ng-controller="timeCtrl" style="text-align:center; min-width:900px;">
	<div class="row">
		<h3><span class="fa fa-clock-o"></span>Agendamento:</h3>
		<div class="jumbotron">
			<div class="row">
				<div class="col-xs-6">
					<div class="row">
						<h1>{{timeN | date:"HH:mm:ss"}}</h1>
					</div>
					<div class="row">
						<h2>{{timeN | date:"dd/MM/yyyy"}}</h2>
					</div>
				</div>
				<div class="col-xs-6">
					<div class="col-xs-6">
						<div class="row" style="min-width:120px;">
							Selecione a hora
							<uib-timepicker style="margin:0 auto;" ng-model="time" ng-change="changed()" hour-step="hstep" minute-step="mstep" show-meridian="ismeridian"></uib-timepicker>
						</div>
					</div>
					<div class="col-xs-6">
						<div class="row" style="min-width:130px;">
							<select class="form-control" ng-model="groups" ng-options="opt for opt in groupopt.values"></select>
						</div>
						<div class="row" style="min-width:130px;">
							Valor de dimmer:
							<select class="form-control" ng-model="dimmer" ng-options="opt for opt in dimopt.values"></select>
						</div>
						<div class="row" style="min-width:130px;">
							</br>
							<button type="button" style="width:130px;" class="btn btn-success" ng-click="createAlarm(time,groups,dimmer)">Cadastrar</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-4">
			<h3><span class="fa fa-calendar"></span> Eventos agendados:</h3>
			<table st-table="displayedCollection" st-safe-src="rowCollection" class="table table-hover table-striped" style="min-width:200px;">
				<thead>
				<tr>
					<th style="text-align:center;" st-sort="time">Hora</th>
					<th style="text-align:center;">Dimmer</th>
					<th style="text-align:center;" st-sort="group">Grupo</th>
				</tr>
				<tr>
					<th colspan="4"><input st-search="" class="form-control" placeholder="Pesquise por alarmes" type="text"/></th>
				</tr>
				</thead>
				<tbody>
				<tr ng-repeat="row in displayedCollection">
					<td>{{row.time | date:'HH:mm'}}</td>
					<td>{{row.dimmer}}%</td>
					<td>{{row.group}}</td>
					<td>
						<button type="button" ng-click="deleteAlarm(row);" class="btn btn-sm btn-danger">
							<i class="glyphicon glyphicon-remove-circle"></i>
						</button>
					</td>
				</tr>
				</tbody>
				<tfoot>
					<tr>
						<td colspan="4" class="text-center">
							<div st-pagination=""  st-template="pages/windows/pagination.ejs" st-items-by-page="itemsByPage" st-displayed-pages="5"></div>
						</td>
					</tr>
				</tfoot>
			</table>
		</div>
		<div id="graphTime" class="col-xs-8">
			<div id="graph_sch"></div>
			<!-- <canvas id="line" class="chart chart-bar" chart-data="data" chart-labels="labels"
			chart-legend="true" chart-series="series" chart-click="onClick" style="width:100%;"></canvas> -->
	</div>
</div>
