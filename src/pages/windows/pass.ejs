<div class="row" ng-controller="usersCtrl" style="margin-left:15px; margin-right:15px;">
	<div class="row">
		<div class="col-xs-6 col-md-offset-3">
			<script type="text/javascript">
			  $(document).ready(function() {
			    var $form = $('#registro');

			    var $submit = $form.find('submit');

			    var checkValid = function(){
			     if( $form.parsley('isValid') ) {
			        $submit.removeAttr("disabled");
			     } else {
			        $submit.attr("disabled", "disabled");
			     }
			    }
			    checkValid();

			    $form.parsley( 'addListener', {
			     onFieldSuccess: function ( elem ) {
			        checkValid();
			     }
			     , onFieldError: function ( elem ) {
			        checkValid();
			     }
			    } );
			  });
			</script>
			<h1><span class="fa fa-key"></span> Alterar a senha:</h1>
			<form ng-controller="usersCtrl"  ng-submit="changePass()" id="registro" data-parsley-validate="">
				<label for="fullname">Nova Senha:</label>
				<input type="password" class="form-control"  ng-model="user.password" name="password" data-parsley-type="alphanum" data-parsley-minlength="5" data-parsley-trigger="change" required>
				<br>
				<input type="submit" class="btn btn-default btn-lg" value="Alterar">
			</form>
		</div>
	</div>
</div>
